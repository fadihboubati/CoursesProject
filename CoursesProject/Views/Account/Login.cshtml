
@{
    ViewData["Title"] = "Login";
}

@* LOOK WHICH CLASS WE ARE USE IT TO CREATE AN INSTANCE FROM IT USING THIS FORM FROM THIS PAGE *@
@* SO, ANY THING INSIDE THE asp-for="#####" WILL BELONG TO AN ATTRIBUTE IN THE CLASS*@
@* ANND ITS VALUE WILL REFLECT TO IT *@
@model CoursesProject.Models.AccountViewModels.LoginViewModel

<h1>Login</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>


            <div class="form-group">
                <label asp-for="UserPassword"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="UserPassword"></span>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                </div>
            </div>
            <input type="submit" name="name" value="Login" class="btn btn-secondary" />

        </form>

    </div>


</div>