
@{
    ViewData["Title"] = "EditUsersInRole";
}

<h1>@ViewBag.RoleName</h1>

@model List<CoursesProject.Models.AccountViewModels.UserRoleViewModel>

<form action="EditUsersInRole" method="post">
    <div class="card-header">
        Add or remove user(s) to the <span class="text-danger">@ViewBag.RoleName </span> role.
    </div>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check m1">
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <input type="hidden" value="@ViewBag.roleID" name="roleID" id="roleID" />

                <input asp-for="@Model[i].isSelected" class="form-check-input" />
                <label asp-for="@Model[i].isSelected">
                    @Model[i].UserName
                </label>
            </div>
        }
    </div>
    <div class="card-footer"></div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>
