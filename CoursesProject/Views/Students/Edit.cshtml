@model CoursesProject.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Currently Student's courses</h4>
                @for (int i = 0; i < ViewBag.StudentCourses.Count; i++)
                {
                    <label>
                        @ViewBag.StudentCourses[i].Course.CourseName
                        @*<input checked name="selectedCourses" type="checkbox" value="@ViewBag.StudentCourses[i].Course.Id" />*@
                    </label>
                    <br />
                }
                <hr />
                <h4>Update the Student's courses</h4>
                @for (int i = 0; i < ViewBag.Courses.Count; i++)
                {
                    <label>
                        @ViewBag.Courses[i].CourseName
                        <input name="selectedCourses" type="checkbox" value="@ViewBag.Courses[i].Id" />
                    </label>
                    <br />
                }
                <hr />
            </div>
            <div class="form-group">
                <input type="submit" disabled value="Update" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Soon.. not ready yet" />
            </div>
        </form>
    </div>
</div>

<div>


    <a asp-action="Index" class="btn ">
        Back to List
    </a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
