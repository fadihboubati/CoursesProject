@model CoursesProject.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
@*@for (int i = 0; i < Model.Courses.Count; i++)
    {
        <p>@Model.Courses[i]</p>
    }*@
@if (ViewBag.Courses.Count == 0)
{
    <h3>Empty</h3>
}
else
{
    <div>
        <ul>
            @for (int i = 0; i < ViewBag.Courses.Count; i++)
            {
                <li> @ViewBag.Courses[i].CourseName</li>
            }
        </ul>
    </div>

}
<div class="mt-5">
    @* Just for Admin  *@
    @if (User.IsInRole("Administrator") && (ViewBag.Courses.Count != 0))
    {
        @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>*@
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark">Edit</a>
    }

    <a asp-action="Index" class="btn btn-dark">Check all Category List</a> |
    <a asp-action="Index" asp-controller="Courses" class="btn btn-dark">Check all Courses</a>
</div>
